<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="post.css" />
    <title>PP</title>
  </head>
  <body>
    <div class="container">
      <% posts.forEach(({id, title, content, imgUrl, createdAt, User, Tags}) =>
      { %>
      <div class="tweet-card">
        <div class="tweet-header">
          <!-- <img src="https://pbs.twimg.com/profile_images/1012717264108318722/9lP-d2yM_400x400.jpg" alt="" class="avatar"> -->
          <div class="tweet-header-info">
            <span class="username"><%= User.userName %></span>
            <span class="timestamp"><%= createdAt %></span>
          </div>
        </div>
        <div class="tweet-content">
          <p><%= content %></p>
          <% if (imgUrl) { %>
          <div class="tweet-img-wrap">
            <img src="<%= imgUrl %>" alt="" class="tweet-img" />
          </div>
          <% } %>
          <span class="tags"><%= Tags.name %></span>
        </div>
      </div>
      <% }) %>
    </div>
  </body>
</html>
