<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PP</title>
  </head>
  <body>
    <h1>Profile</h1>
    <button onclick="location.href='/logout'">Logout</button>
    <button onclick="location.href='/posts'">Posts</button>
    <form method="post">
      <section class="vh-100" style="background-color: #508bfc">
        <div class="container py-5 h-100">
          <div
            class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
              <div class="card shadow-2-strong" style="border-radius: 1rem">
                <div class="card-body p-5 text-center">
                  <h3 class="mb-5">Profile</h3>

                  <div class="form-outline mb-4">
                    <label class="form-label" for="username">Username</label>
                    <input
                      type="text"
                      id="username"
                      name="name"
                      class="form-control form-control-lg" 
                      <% if (data) { %>
                        value="<%= data.name %>"/>
                      <% } %>
                  </div>

                  <div class="form-outline mb-4">
                    <label class="form-label" for="typePasswordX-2"
                      >Gender</label
                    >
                    <select name="gender">
                      <% const gender = ['Female', 'Male'] %>
                      <% if (data) { %>
                        <% gender.forEach(e => { %>
                          <option value="<%= e %>" <%= e === data.gender ? 'selected' : '' %> > <%= e %> </option>
                        <% }) %>
                      <% } else {%>
                        <% gender.forEach(e => { %>
                          <option value="<%= e %>"> <%= e %> </option>
                        <% }) %>
                        <% } %>
                    </select>
                  </div>
                  <div class="form-outline mb-4">
                    <label class="form-label" for="typePasswordX-2"
                      >Date of Birth</label
                    >
                    <input
                      type="date"
                      id="dateOfBirth"
                      name="dateOfBirth"
                      class="form-control form-control-lg"
                      value="<%= data.dateOfBirth? formatDate(data.dateOfBirth): ''%>"
                      />
                  </div>
                  <div class="form-outline mb-4">
                    <label class="form-label" for="typePasswordX-2"
                      >Age</label
                    >
                    <input
                      type="number"
                      id="dateOfBirth"
                      readonly
                      class="form-control form-control-lg"
                      value="<%= data.dateOfBirth? data.getUserAge() : '' %>"
                      />
                  </div>

                  <button
                    class="btn btn-primary btn-lg btn-block"
                    type="submit">
                    Save
                  </button>

                  <hr class="my-4" />
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </form>
  </body>
</html>
